{% extends 'base.html.twig' %} {% block main_content %}
<form method="post">
	<div class="panel admin-panel">
		<div class="panel-head">
			<strong>内容列表</strong>
		</div>
		<div class="padding border-bottom">
			<input type="button" class="button button-small checkall"
				name="checkall" checkfor="id" value="全选" /> <input type="button"
				class="button button-small border-green" value="添加文章" /> <input
				type="button" class="button button-small border-yellow" value="批量删除" />
			<input type="button" class="button button-small border-blue"
				value="回收站" />
		</div>
		<table class="table table-hover">
			<tr>
				<th width="45">选择</th>
				<th width="120">用户名</th>
				<th width="*">用户组</th>
				<th width="100">添加时间</th>
				<th width="100">修改时间</th>
				<th width="100">操作</th>
			</tr>
			{% for u in users %}
			<tr>
				<td><input type="checkbox" name="id" value="1" /></td>
				<td>{{ u.username }}</td>
				<td>{{ u.rolename }}</td>
				<td>{{ u.createAt|date('Y-m-d') }}</td>
				<td>{{ u.updateAt|date('Y-m-d') }}</td>
				<td><a class="button border-blue button-little" href="#">修改</a> <a
					class="button border-yellow button-little" href="#" onclick="{
					if(confirm('确认删除?')){return true;}returnfalse;}">删除</a></td>
			</tr>
			{% endfor %}
		</table>
		<div class="panel-foot text-center">
			<ul class="pagination">
				<li><a href="#">上一页</a></li>
			</ul>
			<ul class="pagination pagination-group">
				<li><a href="#">1</a></li>
				<li class="active"><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
			</ul>
			<ul class="pagination">
				<li><a href="#">下一页</a></li>
			</ul>
		</div>
	</div>
</form>
{% endblock %}
